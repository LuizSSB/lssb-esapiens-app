<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CellPersonLabel">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="CellPersonLabelBlack" parent="CellPersonLabel">
        <item name="android:textColor">#000000</item>
        <item name="android:shadowColor">#FFFFFF</item>
    </style>

    <style name="CellPersonLabelWhite" parent="CellPersonLabel">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#000000</item>
    </style>

    <style name="LabelProfile">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="LabelTitleProfile">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.ActionBarDefault" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">#FFFFFF</item>
    </style>

    <style name="Theme.ActionBarProfile" parent="@style/Theme.ActionBarDefault">
        <item name="android:layout_height">@dimen/height_actionbar_profile</item>
    </style>
</resources>
